<h1>Listing Users</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>


<% for user in @users %>

<tr>
  <td><%=h user.login %></td>
  <td><%= link_to 'Show', user %></td>
  <td><%= link_to 'Edit', edit_user_path(user) %></td>
  <td><%= link_to 'Destroy', :confirm => 'Are you sure?',
                             :method => :delete %></td>
</tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>